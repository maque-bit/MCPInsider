---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="MCP Insider - 優れたMCPサーバーの分析と紹介" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-[#f6f8fd] via-[#f1f4ff] to-[#eef1fa] text-gray-800 font-sans min-h-screen flex flex-col relative selection:bg-blue-200 selection:text-blue-900">
    <!-- Subtle background decoration blobs -->
    <div class="fixed top-0 left-0 w-full h-full overflow-hidden pointer-events-none -z-10">
      <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-blue-100/40 blur-3xl"></div>
      <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-purple-100/40 blur-3xl"></div>
    </div>
    
    <header class="bg-white/70 backdrop-blur-lg border-b border-white/50 sticky top-0 z-50 shadow-sm">
      <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold tracking-tight text-blue-600 flex items-center gap-2">
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          MCP Insider
        </a>
        <nav class="flex gap-4 text-sm font-medium text-gray-600">
          <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
          <a href="#" class="hover:text-blue-600 transition-colors">Guide</a>
        </nav>
      </div>
    </header>
    <main class="flex-1 w-full max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-gray-900 text-gray-400 py-8 text-center text-sm mt-auto">
      <p>&copy; 2026 MCP Insider. Built for Developers.</p>
    </footer>
  </body>
</html>
