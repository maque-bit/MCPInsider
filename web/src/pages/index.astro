import fs from 'node:fs';
import path from 'node:path';

const newsDataPath = path.join(process.cwd(), '../src/data/news_data.json');
let allNews = [];
try {
  if (fs.existsSync(newsDataPath)) {
    allNews = JSON.parse(fs.readFileSync(newsDataPath, 'utf-8'));
  }
} catch (e) {}
const latestNews = allNews.slice(0, 5);

// Read data
const dataPath = path.resolve(process.cwd(), '../src/data/analyzed_data.json');
let projects = [];
let loadError = null;

console.log(`[Build] Attempting to read data from: ${dataPath}`);

try {
  const raw = fs.readFileSync(dataPath, 'utf-8');
  const parsed = JSON.parse(raw);
  projects = parsed.projects.filter((p: any) => p.status === 'published');
  console.log(`[Build] Successfully loaded ${parsed.projects.length} projects (${projects.length} published)`);
} catch (e: any) {
  console.error("[Build] Failed to read analyzed data:", e);
  loadError = e.message;
}

// Extract unique categories for filtering
const allCategories = projects.reduce((acc: string[], p: any) => {
  if (p.analysis && p.analysis.category) {
    p.analysis.category.forEach((c: string) => {
      if (!acc.includes(c)) acc.push(c);
    });
  }
  return acc;
}, []).sort();

// Read settings to check maintenance mode
const settingsPath = path.resolve(process.cwd(), '../src/data/settings.json');
let maintenanceMode = import.meta.env.PUBLIC_MAINTENANCE_MODE === 'true';

// Fallback to settings.json if not forced by env var
if (!maintenanceMode) {
  try {
    const raw = fs.readFileSync(settingsPath, 'utf-8');
    const settings = JSON.parse(raw);
    maintenanceMode = settings.maintenance_mode === true;
  } catch (e) {}
}

const featuredProject = projects.length > 0 ? projects[Math.floor(Math.random() * projects.length)] : null;
