      <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-cyan-400 to-blue-500"></div>
      <div class="flex flex-wrap gap-2 mb-4">
        {project.analysis.category.map((cat: string) => (
          <span class={`text-[11px] tracking-wide uppercase font-bold px-2.5 py-1 rounded shadow-sm ${getCategoryColor(cat)}`}>
            {cat}
          </span>
        ))}
      </div>
      
      <h1 class="text-2xl sm:text-3xl font-extrabold text-gray-900 mb-2 tracking-tight">
        {project.name}
      </h1>
      
      <h2 class="text-lg sm:text-xl text-indigo-700 font-medium mb-4">
        {project.analysis.catchphrase}
      </h2>
      
      <div class="flex flex-wrap items-center gap-4 text-sm font-medium">
        <a href={project.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 bg-gray-900 hover:bg-gray-800 text-white px-4 py-2 rounded-md transition-colors shadow-sm text-sm">
